<Window x:Class="BtChat.Client.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BtChat" Height="600" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Username -->
            <RowDefinition Height="Auto"/> <!-- Connection controls -->
            <RowDefinition Height="*"/>    <!-- Messages -->
            <RowDefinition Height="Auto"/> <!-- Message input -->
        </Grid.RowDefinitions>

        <!-- Username Display -->
        <TextBlock x:Name="UsernameTextBlock"
                   FontSize="16"
                   FontWeight="Bold"
                   Text="Username" />

        <!-- Connection Controls -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,10">
            <!-- Manual Scan & Connect -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button x:Name="ScanButton" Content="Scan Devices" Width="120" Click="ScanButton_Click"/>
                <ComboBox x:Name="DevicesComboBox" Width="250" Margin="10,0,0,0"/>
                <Button x:Name="ConnectButton" Content="Connect" Width="100" Margin="10,0,0,0" Click="ConnectButton_Click"/>
                <Button x:Name="DisconnectButton" Content="Disconnect" Width="100" Margin="10,0,0,0" Click="DisconnectButton_Click"/>
            </StackPanel>

            <!-- Connect by Name -->
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="ConnectNameTextBox" Width="250" Margin="0,0,10,0" VerticalContentAlignment="Center" ToolTip="Enter peer name"/>
                <Button x:Name="ConnectByNameButton" Content="Connect by Name" Width="150" Click="ConnectByNameButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Messages Display -->
        <TextBox x:Name="MessagesTextBox" Grid.Row="2"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" AcceptsReturn="True" FontSize="14"/>

        <!-- Message Input -->
        <DockPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBox x:Name="InputTextBox"
                     Height="35" Width="500" VerticalContentAlignment="Center"
                     KeyDown="InputTextBox_KeyDown" DockPanel.Dock="Left"/>
            <Button x:Name="SendButton" Content="Send" Width="100" Height="35" Click="SendButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
